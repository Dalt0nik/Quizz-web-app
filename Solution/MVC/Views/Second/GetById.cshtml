@model Tuple<int, string>

<partial name="_Navigation" />
<div>
    <h4>Get by ID</h4>
    @if (TempData.ContainsKey("message"))
    {
        <div>
            @(TempData["message"] as string)
        </div>
    }
    @if (Model != null)
    {
        <text>String found (ID @Model.Item1): "@Model.Item2"</text>
    }
    @using (Html.BeginForm("GetById", "Second", FormMethod.Get))
    {
        <table>
            <tr>
                <td>ID: </td>
                <td>@Html.TextBox("id")</td>
            </tr>
            <tr>
                <td colspan="2">
                    <input type="submit" value="Submit"/>
                </td>
            </tr>
        </table>
    }
</div>
