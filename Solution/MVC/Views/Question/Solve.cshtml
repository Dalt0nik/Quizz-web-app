@using System.Text.Json
@model MVC.Models.SolveRunModel
@{
    ViewData["Title"] = "Question Page";
}

@section Stylesheets {
    <link rel="stylesheet" href="~/css/Question/Solve.css">
}

@section Scripts {
    <script src="~/js/Question/Solve.js"></script>
}
<a asp-controller="Lobby" asp-action="Room" asp-route-id="@ViewBag.RoomId" class=" btn btn-secondary">Return</a>
<div id="questionTitle">
    <h1>@Model.currentQuestion.Title</h1>
</div>

    @if (Model.currentQuestion.ImageName != null)
    {
        <div id="questionImage" class="text-center mt-5">
            <img src="~/img/@Model.currentQuestion.ImageName" alt="Question Image" class="img-fluid" />
        </div>
    }

<div id="form">
    @using (Html.BeginForm("Solve", "Question", FormMethod.Post))
    {
        <input type="hidden" name="roomId" value="@ViewBag.RoomId" />
        <input type="hidden" name="currentQuestionIndex" value="@Model.currentQuestionIndex" />
        <input type="hidden" name="questionsIdJson" value='@JsonSerializer.Serialize(Model.questionsId)' />
        <input type="hidden" name="answersJson" value='@JsonSerializer.Serialize(Model.answers)' />
        
        
        @foreach (var (idx, option) in Model.currentQuestion.AnswerOptions.WithIndex())
        {
            <label class="option">
                <input type="radio" name="selectedOption" value="@idx" />
                <span class="option-text">@option</span>
            </label>
        }

        <button type="submit" id="submitButton">Submit</button>
        <div id="answerMessage"></div>
    }
</div>
