@model MVC.Models.SolveViewModel
@{
    ViewData["Title"] = "Question Page";
}

@section Stylesheets {
    <link rel="stylesheet" href="~/css/Question/Solve.css">
}

@section Scripts {
    <script src="~/js/Question/Solve.js"></script>
}

<div class="container" style="background-image: url(https://www.freevector.com/uploads/vector/preview/28116/Education_Background_Vector_10.jpg); background-size: cover; background-repeat: no-repeat,;">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <div id="questionTitle" class="text-center mt-4">
                <div style="background-color: white; padding: 5px;">
                    <h1>@Model.Question.Title</h1>
                </div>
            </div>
        </div>
    </div>
            @if (Model.Question.ImageName != null)
            {
                <div id="questionImage" class="text-center mt-5">
                    <img src="~/img/@Model.Question.ImageName" alt="Question Image" class="img-fluid" />
                </div>
            }

            <div id="form" class="mt-2">
                <form id="choiceForm">
                    @foreach (var (idx, option) in Model.Question.AnswerOptions.WithIndex())
                    {
                        <div class="form-check">
                            <input type="radio" id="option@idx" name="answer" value="@idx" class="form-check-input" />
                            <label for="option@idx" class="form-check-label">@(idx + 1). @option</label>
                        </div>
                    }

                    <button type="button" id="submitButton" class="btn btn-primary mt-3">Submit</button>
                    <div id="answerMessage" class="mt-3"></div>
                </form>
            </div>
        </div>
    </div>
</div>



<script>
    function getRoomName() {
        return "@Model.Room";
    }

    function getQuestionName() {
        return "@Model.QuestionName";
    }
</script>
