@model MVC.Models.QuestionSolveViewModel
@{
    ViewData["Title"] = "Question Page";
}

@section Stylesheets {
    <link rel="stylesheet" href="~/css/Question/Solve.css">
}

@section Scripts {
    <script src="~/js/Question/Solve.js"></script>
}

<div id="questionTitle">
    <h1>@Model.QuestionModel.Question</h1>
</div>

@if(Model.QuestionModel.ImageName != null)
{
    <div id="questionImage">
        <img src="~/img/@Model.QuestionModel.ImageName" alt="Question Image" />
    </div>
}

<div id="form">
    <form id="choiceForm">
        @foreach(var (idx, option) in Model.QuestionModel.AnswerOptions.WithIndex())
        {
            <label class="option">
                <input type="radio" name="answer" value="@idx" /> @option
            </label>
            <br />
        }

        <button type="button" id="submitButton">Submit</button>
        <div id="answerMessage"></div>
    </form>
</div>

<script>
    function getRoomName() {
        return "@Model.RoomId";
    }

    function getQuestionName() {
        return "@Model.QuestionName";
    }
</script>
